<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">


	<view-state 
		id="settings" 
		view="/resources/views/settings/settings.xhtml">
		
		<on-entry>
			<evaluate 
				expression="settingsController.newNormsSetting()"
				result="flowScope.normsSetting" />
			<evaluate 
				expression="settingsController.newUserDetailsSetting()"
				result="flowScope.userDetailsSetting" />
			<evaluate 
				expression="settingsController.newUsersSetting()"
				result="flowScope.usersSetting" />
			<evaluate 
				expression="settingsController.newSettings()"
				result="flowScope.settings" />	
		</on-entry>
		
	</view-state>
	
	<view-state 
		id="normsSetting" 
		view="/resources/views/settings/sections/norms.xhtml">
		
		<on-entry>
			<evaluate 
				expression="settingsController.newNormsSetting()"
				result="flowScope.normsSetting" />
		</on-entry>
		
	</view-state>
	
	<view-state 
		id="userDetailsSetting"
		view="/resources/views/settings/sections/userDetails.xhtml">
	
		<on-entry>
			<evaluate 
				expression="settingsController.newUserDetailsSetting()"
				result="flowScope.userDetailsSetting" />
		</on-entry>
		
	</view-state>
	
	<view-state 
		id="usersSetting" 
		view="/resources/views/settings/sections/users.xhtml">
	
		<on-entry>
			<evaluate 
				expression="settingsController.newUsersSetting()"
				result="flowScope.usersSetting" />
		</on-entry>
		
		<transition 
			on="addUser"
			to="addUser-step-1">
			
			<evaluate 
				expression="usersSetting.newUser()" />
				
		</transition>
		
		<transition 
			on="editUser" 
			to="isUserSelected">
		</transition>
		
	</view-state>
	
	<decision-state id="isUserSelected">
		<on-entry>
			<evaluate expression="usersSetting.checkSelectedUser()" ></evaluate>
		</on-entry>
		
		<if then="addUser-step-1" test="usersSetting.selected != null" else="settings"/>
	</decision-state>
	
	<view-state 
		id="addUser-step-1" 
		view="/resources/views/settings/sections/addUser-step-1.xhtml">
		
		
		
		<transition 
			on="next"
			to="addUser-step-2">
		</transition>
		
		<transition
			on="back"
			to="settings">
		</transition>
		
	</view-state>
	
	<view-state 
		id="addUser-step-2" 
		view="/resources/views/settings/sections/addUser-step-2.xhtml">
		
		<transition 
			on="next"
			to="addUser-confirm">
		</transition>
		
		<transition
			on="back"
			to="addUser-step-1">
		</transition>
		
	</view-state>
	
	<view-state 
		id="addUser-confirm" 
		view="/resources/views/settings/sections/addUser-confirm.xhtml">
		
		<transition 
			on="next"
			to="settings">
			
			<evaluate 
				expression="settingsController.saveUser(flowRequestContext)" />
				
		</transition>
		
		<transition
			on="back"
			to="addUser-step-2">
		</transition>
		
	</view-state>
	
	<view-state 
		id="addNorm-step-1"
		view="/resources/views/settings/sections/addNorm-step-1.xhtml">
		
		<transition 
			on="next"
			to="isStandardSelected">
			
			<evaluate expression="normsSetting.newNorm()"></evaluate>
		</transition>
		
		<transition
			on="back"
			to="settings">
		</transition>
		
		<transition
			on="newStandard"
			to="addNorm-step-2">
		</transition>
		
	</view-state>
	
	<decision-state id="isStandardSelected">
		<if 
			test="normsSetting.isStandardSelected()"
			then="addNorm-step-2"
			else="addNorm-step-1"/>
	</decision-state>
	
	<view-state 
		id="addNorm-step-2"
		view="/resources/views/settings/sections/addNorm-step-2.xhtml">
		
		<transition 
			on="next"
			to="addNorm-step-3">
			
		</transition>
		
		<transition
			on="back"
			to="addNorm-step-1">
		</transition>
		
	</view-state>
	
	<view-state 
		id="addNorm-step-3"
		view="/resources/views/settings/sections/addNorm-step-3.xhtml">
		
		<transition 
			on="next"
			to="isParameterSelected">
			
			<evaluate expression="normsSetting.addPatameters()"/>
		</transition>
		
		<transition
			on="back"
			to="addNorm-step-2">
		</transition>
		
	</view-state>
	
	<decision-state id="isParameterSelected">
		<if 
			test="normsSetting.isParameterSelected()"
			then="addNorm-step-4"
			else="addNorm-step-3"/>
	</decision-state>
	
	<view-state 
		id="addNorm-step-4"
		view="/resources/views/settings/sections/addNorm-step-4.xhtml">
		
		<transition 
			on="next"
			to="isNormHandlerSelected">
			
			<evaluate expression="normsSetting.addNormHandler()"></evaluate>
		</transition>
		
		<transition
			on="back"
			to="addNorm-step-3">
		</transition>
		
	</view-state>
	
	<decision-state id="isNormHandlerSelected">
		<if 
			test="normsSetting.isNormHandlerSelected()"
			then="addNorm-step-5"
			else="addNorm-step-4"/>
	</decision-state>
	
	<view-state 
		id="addNorm-step-5"
		view="/resources/views/settings/sections/addNorm-step-5.xhtml">
		<on-entry>
			<evaluate expression="normsSetting.initLimits()" />
		</on-entry>
		
		<transition 
			on="next"
			to="addNorm-confirm">
			
			<evaluate expression="normsSetting.confirmLimits()" />
			
		</transition>
		
		<transition
			on="back"
			to="addNorm-step-4">
		</transition>
		
	</view-state>
	
	<view-state 
		id="addNorm-confirm"
		view="/resources/views/settings/sections/addNorm-confirm.xhtml">
		
		<transition 
			on="next"
			to="settings">
			
			<evaluate expression="settingsController.saveNewNorm(flowRequestContext)" />
			
		</transition>
		
		<transition
			on="back"
			to="addNorm-step-5">
		</transition>
		
	</view-state>
	
	
	<view-state 
		id="logout" 
		view="flowRedirect:dataJournal">
	</view-state>
	
	<view-state 
		id="changeLogin" 
		view="/resources/views/settings/sections/changeLogin-step-1.xhtml">
		
		<transition
			on="changeLogin"
			to="settings" >
			
			<evaluate 
				expression="settingsController.changeLogin()" />
				
		</transition>
		
	</view-state>
	

	<global-transitions>
		<transition 
			on="cancel" 
			to="settings" />
		
		<transition 
			on="logout" 
			to="logout"/>
		
		<transition 
			on="usersSetting" 
			to="usersSetting" />
		
		<transition 
			on="userDetailsSetting" 
			to="userDetailsSetting" />
			
		<transition 
			on="normsSetting" 
			to="normsSetting" />
			
		<transition
			on="changeLogin"
			to="changeLogin" >
		</transition>
		
		<transition 
			on="addUser"
			to="addUser-step-1">
			
			<evaluate 
				expression="usersSetting.newUser()" />
				
		</transition>
		
		<transition 
			on="editUser" 
			to="isUserSelected">
		</transition>
		
		<transition
			on="addNorm"
			to="addNorm-step-1">
		</transition>
		
		<transition
			on="editNorm"
			to="addNorm-step-2">
		</transition>
		
	</global-transitions>

</flow>